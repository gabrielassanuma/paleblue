<div style="color:white">
 <div>
    <h2>Balances</h2><br>
    <% @user_balances.each do |balance| %>
      <p>Token: <%= balance.token.nickname %></p>
      <p>Token Address: <%= link_to balance.token.tk_address, token_path(balance.token)%></p>
      <p>Balance: <%= balance.tk_amount %></p>

    <% end %>
  </div>
  <h2>Transactions for: <%= @user.nickname %> @ Wallet: <%= @user.wlt_address %></h2><br>
    <div>
      <h4>From this User:</h4>
      <% @user_from_transactions.each do |transaction| %>
        <h3>Transaction id: <%= transaction.id %></h3>
        <p>Transaction Amount: <%= transaction.tk_amount %> <%= transaction.token.nickname %></p>
        <p>From: <%= transaction.from_user.nickname %> @ <%= transaction.from_user.wlt_address %></p>
        <p>To: <%= transaction.to_user.nickname %> @ <%= transaction.to_user.wlt_address %></p>
      <% end %>
    </div><br>
    <div><h4>To this User:</h4><br>
      <% @user_to_transactions.each do |transaction| %>
        <h3>Transaction Amount: <%= transaction.tk_amount %></h3>
        <p>Transacted Token: <%= transaction.token.nickname %></p>
        <p>From: <%= transaction.from_user.nickname %></p>
        <p>To: <%= transaction.to_user.nickname %></p>
      <% end %>
    </div>
</div>
