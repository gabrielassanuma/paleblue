<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3 form">
      <div class="p-3">
        <%= simple_form_for @token do |f| %>
          <h3>Add a new token</h3>
          <%= f.error_notification %>
          <%= f.input :nickname %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, class: "btn btn-ghost" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
