<div class="bg-img"></div>
<div class="new-container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3 form">
      <div class="p-3">
        <div class='d-flex justify-content-between align-items-baseline'>
          <h3>Donate</h3>
          <%= link_to creator_path(@creator) do %>
            <i class="fa-solid fa-xmark text-light"></i>
          <% end %>
        </div>
        <%= simple_form_for [@creator, @transaction] do |f| %>
          <%= f.input :tk_amount %>
          <%= f.association :token,
                            collection: @user_tokens,
                            label_method: :nickname %>
          <div class='d-flex' style='justify-content: space-between;'>
          <%= f.button :submit, 'Donate', class: 'btn btn-ghost' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
