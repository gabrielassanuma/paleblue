<div class="bg-img"></div>
<div class="sign-in-container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3 form">
      <div class='p-3'>
        <h2>Generate New Wallet</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :nickname, label: 'wallet nickname',
                        required: true,
                        autofocus: true %>
            <%= f.input :password, label: 'password',
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation, label: 'confirm password',
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions d-flex justify-content-center p-3">
            <%= f.button :submit, "Generate", class: 'btn btn-ghost'%>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
