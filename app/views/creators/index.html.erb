<div class="bg-img"></div>
<div class='content-creator'>
  <div class="m-5" style="color:white">
    <h2 class="d-flex justify-content-center">Creators Index</h2><br>
    <div class="cards">
      <% @creators.each do |creator| %>
        <div class="box">
          <div class="card-content creator-index-card">
            <h3><%= link_to creator.title, creator_path(creator) %></h3>
            <p><i class="fa-solid fa-location-pin fa-lg text-light"></i>  <%= creator.location %></p>
            <p>Tags:</p>
            <p class='font-16'>#<%= creator.tag1 %></p>
            <p class='font-16'>#<%= creator.tag2 %></p>
            <p class='font-16'>#<%= creator.tag3 %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
